<% unless current_user %>
  <div class="vertical-center">
    <div class="container text-center">
      <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary btn-raised" %>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="jumbotron text-center standup-jumobotron">
          <h1 class="title">Standup</h1>
          <h2 class="title"><%= DateTime.now.strftime("%A, %B %e, %Y") %></h2>
        </div>
      </div>
    </div>

    <%= form_for @update do |f| %>
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <div class="panel panel-primary update-panel personal-updates">
            <div class="panel-heading">
              <h3 class="panel-title">Personal Updates</h3>
            </div>
            <%= render "updates/personal_form", f: f %>
            <div class="text-center">
              <a class="btn btn-fab btn-raised btn-primary add-new" id="add-personal"><i class="material-icons">add</i></a>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <div class="panel panel-primary update-panel professional-updates">
            <div class="panel-heading">
              <h3 class="panel-title">Professional Updates</h3>
            </div>
            <%= render "updates/professional_form", f: f %>
            <div class="text-center">
              <a class="btn btn-fab btn-raised btn-primary add-new" id="add-professional"><i class="material-icons">add</i></a>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center submit">
        <button class="btn btn-primary btn-raised">Send</button>
      </div>
    <% end %>

  </div>
<% end %>
