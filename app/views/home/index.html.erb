<% unless current_user %>
  <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="jumbotron text-center">
          <h1 class="title">Standup</h1>
          <h2 class="title"><%= DateTime.now.strftime("%A, %B %e, %Y") %></h2>
        </div>
      </div>
    </div>
  </div>

  <div class="form">
    <%= form_for @standup do |f| %>

      <div class="row">
        <div class="field">
          <div class="col-xs-12 col-md-4 col-md-offset-4">
            <%= f.label :personal_updates %>
            <%= f.text_field :personal_updates %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

<% end %>
